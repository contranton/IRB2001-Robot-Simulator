\noindent\ignorespaces
\begin{center}%
\parbox{0.8\textwidth}{%
{\em #1}\\%
\fbox{\parbox{0.75\textwidth}{\centering #2}}}%
\end{center}%
\par\noindent%
\ignorespacesafterend}

